<?xml version="1.0" encoding="UTF-8"?>
<CentralServices variable ="" name="bob">
    <group name="default"  >
        
        <control name="default" java_command="/usr/bin/java" >
            <ask test="${java_command} == null" name="java_command"  message="Please enter the path to the java command:" />
            <copy name="test_resources/wrapper.conf" dest="wrapper.conf" onAction="restart_iptables" chmod="+x">
                <filter valueAttributeName="java_command" trigger="java_cmd" />                
            </copy>
            <shellcommand name="restart_iptables_command" exec="/sbin/service iptables restart" if="restart_iptables"/>
        </control>
    </group>

</CentralServices>
